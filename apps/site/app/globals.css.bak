/* Helsingbuss Hero â€“ Responsive */
@media (max-width: 980px) {
  .hb-quickquote {
    grid-template-columns: 1fr 1fr !important;
  }
}

@media (max-width: 560px) {
  .hb-quickquote {
    grid-template-columns: 1fr !important;
  }
}

/* Hero title spacing on small screens */
@media (max-width: 560px) {
  .hb-hero-title {
    font-size: 38px !important;
    line-height: 1.12 !important;
  }
  .hb-hero-inner {
    padding: 110px 16px 54px !important;
  }
}

/* Mobile header: logo + burger only */
@media (max-width: 560px) {
  .hb-header-cta,
  .hb-header-search {
    display: none !important;
  }

  /* om du vill: gr burger lite strre p mobil */
  .hb-header-burger {
    width: 46px !important;
    height: 46px !important;
    font-size: 20px !important;
  }
}

/* hb-hero-title mobile tuning v2 */
@media (max-width: 560px) {
  .hb-hero-title{
    font-size: 34px !important;
    line-height: 1.12 !important;
    letter-spacing: -0.02em !important;
    max-width: 18ch !important;
    text-wrap: balance;
    word-break: normal;
    hyphens: auto;
  }
}

/* QuickActionModule responsive */
@media (max-width: 980px) {
  .hb-quick-module .hb-grid {
    grid-template-columns: 1fr 1fr !important;
  }
}

@media (max-width: 560px) {
  .hb-quick-module {
    max-width: 520px !important;
  }
  .hb-quick-module .hb-tabs {
    grid-template-columns: 1fr !important;
  }
  .hb-quick-module .hb-grid {
    grid-template-columns: 1fr !important;
  }
  .hb-quick-module a {
    width: 100% !important;
  }
}

/* QuickActionModule offer responsive */
@media (max-width: 980px) {
  .hb-quick-module .hb-grid {
    grid-template-columns: 1fr 1fr !important;
  }
}
@media (max-width: 560px) {
  .hb-quick-module .hb-grid {
    grid-template-columns: 1fr !important;
  }
  .hb-quick-module button {
    width: 100% !important;
  }
}

/* HB_MOBILE_FIX_START */
@media (max-width: 768px) {
  .hb-header-inner { padding: 12px 16px; }
  .hb-right { gap: 10px; }
  .hb-hideMobile { display: none !important; }
  .hb-hamburgerBtn { position: relative; z-index: 80; }

  .hb-qam-grid{
    display: grid;
    grid-template-columns: 1fr;
    gap: 10px;
  }
  .hb-qam-grid select,
  .hb-qam-grid input,
  .hb-qam-grid button{
    width: 100%;
  }
  .hb-qam-grid button{ min-height: 44px; }
}
/* HB_MOBILE_FIX_END */

/* HB_MOBILE_HEADER_QAM_FIX_START */
/* MOBIL ONLY (rr inte desktop) */
@media (max-width: 768px) {

  /* HEADER: bara Logo + Logga in + Hamburgare */
  button[aria-label*="Sprk"],
  button[aria-label*="Language"],
  a[aria-label*="Sprk"],
  a[aria-label*="Language"],
  button[aria-label*="Globe"],
  button[aria-label*="Language selector"]{
    display: none !important;
  }

  button[aria-label*="Sk"],
  button[aria-label*="Search"]{
    display: none !important;
  }

  /* flytta in header-innehll lite (s inget hamnar bakom kanten) */
  .hb-header-inner { padding-left: 16px !important; padding-right: 16px !important; }
  .hb-right { gap: 10px !important; }

  /* SNABBSTART / QuickActionModule: gr den mobilvnlig */
  .hb-qam-grid{
    display: grid !important;
    grid-template-columns: minmax(0,1fr) minmax(0,1fr) !important;
    gap: 10px !important;
    align-items: stretch !important;
  }

  .hb-qam-grid select,
  .hb-qam-grid input{
    width: 100% !important;
    min-width: 0 !important;
  }

  /* gr knappen fullbredd p mobil (spannar 2 kolumner) */
  .hb-qam-grid button{
    width: 100% !important;
    min-height: 44px !important;
    grid-column: 1 / -1 !important;
  }

  /* Om frsta fltet r en select (Typ av resa) kan den f full bredd ocks */
  .hb-qam-grid select:first-of-type{
    grid-column: 1 / -1 !important;
  }
}
/* HB_MOBILE_HEADER_QAM_FIX_END */

/* HB_MOBILE_HEADER_FIX_START */
@media (max-width: 768px) {
  /* Visa hamburgare p mobil */
  button[aria-label*="Meny"],
  button[aria-label*="Menu"]{
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  /* Dlj glob + sk p mobil (du vill bara: logo + logga in + hamburgare) */
  button[aria-label*="Sprk"],
  button[aria-label*="Language"],
  button[aria-label*="Globe"],
  button[aria-label*="Sk"],
  button[aria-label*="Search"]{
    display: none !important;
  }

  /* Lt header ligga fint innanfr kanten */
  .hb-header-inner { padding-left: 16px !important; padding-right: 16px !important; }
  .hb-right { gap: 12px !important; }
}
/* HB_MOBILE_HEADER_FIX_END */


/* Om du har wrapper som skapar "kortet" med rundade hrn */
  .hb-hero,
  .hb-hero-card,
  .hb-hero-inner,
  .hb-shell,
  .hb-page {
    border-top-left-radius: 0 !important;
    border-top-right-radius: 0 !important;
  }

  /* skerstll att inget "luft" skapar vit remsa */
  body {
    margin: 0 !important;
  }


/* --- Mobile fix: hero edge-to-edge (no visible band) + Avresa fits --- */
@media (max-width: 820px) {

  /* Viktigt: undvik att ngon wrapper skapar "kortknsla" med rundade hrn p mobilen */
  .hb-hero,
  .hb-hero-card,
  .hb-hero-inner,
  .hb-shell,
  .hb-page,
  main > section:first-child {
    border-top-left-radius: 0 !important;
    border-top-right-radius: 0 !important;
    border-radius: 0 !important;
    margin-top: 0 !important;
  }

  /* Se till att inget sticker ut och skapar kanter */
  .hb-hero,
  .hb-hero-card,
  main > section:first-child {
    width: 100% !important;
    max-width: 100% !important;
    overflow: hidden !important;
  }

  /* Fix: input/flt fr inte trycka ut grid p mobil (Avresa-problemet) */
  input,
  select,
  textarea {
    max-width: 100% !important;
    min-width: 0 !important;
    box-sizing: border-box !important;
  }

  /* Extra: date-input kan vara extra "stelt" i iOS */
  input[type="date"] {
    width: 100% !important;
    min-width: 0 !important;
  }

  /* Om din snabbstart-modul anvnder grid (vanligt i din kod) */
  .hb-qam-grid,
  .hb-quick-grid,
  .hb-quickaction-grid {
    min-width: 0 !important;
  }

  .hb-qam-grid > *,
  .hb-quick-grid > *,
  .hb-quickaction-grid > * {
    min-width: 0 !important;
  }
}




/* === MOBILE FIXES (final) === */
@media (max-width: 640px) {
  /* iPhone safe-area: lt hero-bakgrunden g hela vgen upp */
  .hb-hero,
  .hb-hero-wrap,
  .hb-hero-full,
  .hb-hero-card {
    padding-top: env(safe-area-inset-top) !important;
  }
/* A) Hero ska g hela vgen upp (inga band/kanter) */
  html, body {
    margin: 0 !important;
    padding: 0 !important;
    background: transparent !important;
    overflow-x: hidden !important;
  }

  /* Full-bleed: tvinga hero att bli 100vw och centrera */
  .hb-hero,
  .hb-hero-wrap,
  .hb-hero-full,
  .hb-hero-card {
    width: 100vw !important;
    max-width: 100vw !important;
    margin-left: calc(50% - 50vw) !important;
    margin-right: calc(50% - 50vw) !important;
    border-radius: 0 !important;
  }

  /* Om ngon wrapper ger padding/marginal som skapar â€œbandetâ€ */
  main, #__next {
    padding: 0 !important;
    margin: 0 !important;
    width: 100% !important;
  }

  /* B) Avresa ska INTE overflowa + ska inte vara â€œblankâ€ p iPhone */

  /* 1 kolumn p mobil s ingenting trycks ut */
  .hb-qam-grid,
  .hb-qam-row {
    grid-template-columns: 1fr !important;
    gap: 12px !important;
  }

  /* Stoppa att flt tvingar bredd */
  .hb-qam-grid > *,
  .hb-qam-row > *,
  .hb-qam-field,
  .hb-qam-field * {
    min-width: 0 !important;
    box-sizing: border-box !important;
  }

  /* Inputs/select ska alltid hlla sig innanfr */
  .hb-qam-grid input,
  .hb-qam-grid select,
  .hb-qam-row input,
  .hb-qam-row select {
    width: 100% !important;
    max-width: 100% !important;
  }

  /* iOS: date kan se â€œtomâ€ ut om textfrgen/renderer blir fel */
  input[type="date"] {
    -webkit-appearance: none !important;
    appearance: none !important;
    background: #fff !important;
    color: #111 !important;
    -webkit-text-fill-color: #111 !important;
  }

  /* iOS: skerstll att sjlva datum-delarna fr frg */
  input[type="date"]::-webkit-datetime-edit,
  input[type="date"]::-webkit-datetime-edit-text,
  input[type="date"]::-webkit-datetime-edit-month-field,
  input[type="date"]::-webkit-datetime-edit-day-field,
  input[type="date"]::-webkit-datetime-edit-year-field {
    color: #111 !important;
  }

  /* Om kalender-ikonen blir â€œosynligâ€ ibland */
  input[type="date"]::-webkit-calendar-picker-indicator {
    opacity: 0.85;
  }
}


/* --- iOS/WebView: ta bort vit remsa hgst upp (safe-area/bounce) --- */
@media (max-width: 640px) {
  html, body {
    background: #ffffff !important; /* syns bakom notch/bounce istllet fr vitt */
  }

  /* Flytta upp hero under safe-area s bilden knns "hela vgen upp" */
  .hb-hero,
  .hb-hero-wrap,
  .hb-hero-full {
    margin-top: calc(env(safe-area-inset-top) * -1) !important;
    padding-top: env(safe-area-inset-top) !important;
  }
}




